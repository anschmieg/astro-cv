---
import { profile } from "../content/cv/profile";

// iterate over values in profile. If they match a hand-entered URL, replace them with a valid absolute URL.
for (const key in profile) {
  if (profile[key].startsWith("/")) {
    // delete previous value
    delete profile[key];
    profile[key] = new URL(profile[key], "https://www.example.com").href;
  }
}
---

<div class="profile-header text-center mb-3">
{profile.name && <h1 class="mt-3 text-3xl">{profile.name}</h1>}{
  profile.title && (
    <h2 class="mt-1 text-2xl font-thin">{profile.title}</h2>
  )
}
</div>
<div class="text-left text-md w-full">
{
  profile.birthdate && (
    <p>
      <i class="bi bi-asterisk mr-3" /> 
      {profile.birthdate}
    </p>
  )
}{
    profile.residence && (
      <p>
        <i class="bi bi-house mr-3" /> 
        {profile.residence}
      </p>
    )
}
</div>